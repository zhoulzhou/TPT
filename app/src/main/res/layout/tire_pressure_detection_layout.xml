<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/car_bg"
        android:layout_width="120dp"
        android:layout_height="300dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.tire.view.TwoTextView
        android:id="@+id/tire_fl_text"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/car_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <com.example.tire.view.TwoTextView
        android:id="@+id/tire_fr_text"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@id/car_bg"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.example.tire.view.TwoTextView
        android:id="@+id/tire_bl_text"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/car_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <com.example.tire.view.TwoTextView
        android:id="@+id/tire_br_text"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@id/car_bg"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/tire_fl"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:src="@color/blue"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toLeftOf="@+id/car_bg"
        app:layout_constraintTop_toTopOf="@+id/car_bg"
        />

    <ImageView
        android:id="@+id/tire_fr"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:src="@color/blue"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/car_bg"
        app:layout_constraintTop_toTopOf="@id/car_bg"/>

    <ImageView
        android:id="@+id/tire_bl"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:src="@color/blue"
        android:layout_marginBottom="10dp"
        app:layout_constraintRight_toLeftOf="@id/car_bg"
        app:layout_constraintBottom_toBottomOf="@id/car_bg"/>

    <ImageView
        android:id="@+id/tire_br"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:src="@color/blue"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toRightOf="@id/car_bg"
        app:layout_constraintBottom_toBottomOf="@id/car_bg"/>

</android.support.constraint.ConstraintLayout>