<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/car_bg"
        android:layout_width="240dp"
        android:layout_height="600dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.tire.view.TwoTextView
        android:id="@+id/tire_fl_text"
        style="@style/tire_two_text_view"
        app:layout_constraintTop_toTopOf="@id/tire_fl"
        app:layout_constraintBottom_toBottomOf="@id/tire_fl"
        app:layout_constraintRight_toLeftOf="@id/tire_fl"
        />

    <com.example.tire.view.TwoTextView
        android:id="@+id/tire_fr_text"
        style="@style/tire_two_text_view"
        app:layout_constraintTop_toTopOf="@id/tire_fr"
        app:layout_constraintBottom_toBottomOf="@id/tire_fr"
        app:layout_constraintLeft_toRightOf="@id/tire_fr"
        />

    <com.example.tire.view.TwoTextView
        android:id="@+id/tire_bl_text"
        style="@style/tire_two_text_view"
        app:layout_constraintTop_toTopOf="@id/tire_bl"
        app:layout_constraintBottom_toBottomOf="@id/tire_bl"
        app:layout_constraintRight_toLeftOf="@id/tire_bl"

        />

    <com.example.tire.view.TwoTextView
        android:id="@+id/tire_br_text"
        style="@style/tire_two_text_view"
        app:layout_constraintTop_toTopOf="@id/tire_br"
        app:layout_constraintBottom_toBottomOf="@id/tire_br"
        app:layout_constraintLeft_toRightOf="@id/tire_br"
        />

    <ImageView
        android:id="@+id/tire_fl"
        style="@style/tire_image"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toLeftOf="@+id/car_bg"
        app:layout_constraintTop_toTopOf="@+id/car_bg"
        />

    <ImageView
        android:id="@+id/tire_fr"
        style="@style/tire_image"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/car_bg"
        app:layout_constraintTop_toTopOf="@id/car_bg"/>

    <ImageView
        android:id="@+id/tire_bl"
        style="@style/tire_image"
        android:layout_marginBottom="30dp"
        app:layout_constraintRight_toLeftOf="@id/car_bg"
        app:layout_constraintBottom_toBottomOf="@id/car_bg"/>

    <ImageView
        android:id="@+id/tire_br"
        style="@style/tire_image"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toRightOf="@id/car_bg"
        app:layout_constraintBottom_toBottomOf="@id/car_bg"/>

</android.support.constraint.ConstraintLayout>